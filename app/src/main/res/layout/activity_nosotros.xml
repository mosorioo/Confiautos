<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Nosotros">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="146dp"
            android:layout_height="90dp"
            android:layout_marginStart="133dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="28dp"
            android:contentDescription="@string/logoapp"
            app:layout_constraintBottom_toTopOf="@+id/textNosotros"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textNosotros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="110dp"
            android:layout_marginBottom="16dp"
            android:text="@string/acerca_nosotros"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/textInfoNosotros"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <TextView
            android:id="@+id/textInfoNosotros"
            android:layout_width="346dp"
            android:layout_height="109dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:text="@string/info_nosotros"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textUbicacion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textNosotros" />

        <TextView
            android:id="@+id/textUbicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="219dp"
            android:layout_marginBottom="8dp"
            android:text="@string/ubicacion"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textdireccion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInfoNosotros" />

        <TextView
            android:id="@+id/textdireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="61dp"
            android:layout_marginBottom="16dp"
            android:text="@string/direccion_taller"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/mapView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textUbicacion" />

        <TextView
            android:id="@+id/textContacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="289dp"
            android:layout_marginBottom="8dp"
            android:text="@string/contacto"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textLlamar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mapView" />

        <TextView
            android:id="@+id/textLlamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="267dp"
            android:layout_marginBottom="16dp"
            android:text="@string/telefono"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textRedes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textContacto" />

        <TextView
            android:id="@+id/textRedes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="193dp"
            android:layout_marginBottom="102dp"
            android:text="@string/nuestras_redes"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textLlamar" />

        <Button
            android:id="@+id/btnNosotrosVolver"
            android:layout_width="115dp"
            android:layout_height="48dp"
            android:layout_marginStart="279dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:onClick="Volver"
            android:text="@string/volver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mapView" />

        <ImageButton
            android:id="@+id/iBtnInstagram"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="195dp"
            android:layout_marginBottom="91dp"
            android:contentDescription="@string/icoInstagram"
            android:onClick="Instagram"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textRedes"
            app:layout_constraintTop_toBottomOf="@+id/iBtnLlamar"
            app:srcCompat="@drawable/instagram" />

        <ImageButton
            android:id="@+id/iBtnWhatsApp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="83dp"
            android:contentDescription="@string/icoWhatsApp"
            android:onClick="WhatsApp"
            app:layout_constraintBottom_toTopOf="@+id/btnNosotrosVolver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iBtnSms"
            app:layout_constraintTop_toBottomOf="@+id/mapView"
            app:srcCompat="@drawable/whats" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="360dp"
            android:layout_height="119dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textContacto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textdireccion" />

        <ImageButton
            android:id="@+id/iBtnLlamar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="12dp"
            android:onClick="Llamar"
            app:layout_constraintBottom_toTopOf="@+id/iBtnInstagram"
            app:layout_constraintEnd_toStartOf="@+id/iBtnSms"
            app:layout_constraintStart_toEndOf="@+id/textLlamar"
            app:layout_constraintTop_toBottomOf="@+id/mapView"
            app:srcCompat="@drawable/llamada"
            android:contentDescription="@string/Llamar" />

        <ImageButton
            android:id="@+id/iBtnSms"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="83dp"
            android:onClick="Sms"
            app:layout_constraintBottom_toTopOf="@+id/btnNosotrosVolver"
            app:layout_constraintEnd_toStartOf="@+id/iBtnWhatsApp"
            app:layout_constraintStart_toEndOf="@+id/iBtnLlamar"
            app:layout_constraintTop_toBottomOf="@+id/mapView"
            app:srcCompat="@drawable/sms"
            android:contentDescription="@string/Sms" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>